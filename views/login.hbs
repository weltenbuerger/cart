<div class="block-container">
    <div class="block">
        <div class="register">
            <div class="cta-title">New Here?</div>
            <div class="fields">
                <form action="/register" method="POST">
                    <input type="text" id="email" name="email" placeholder="email">
                    <input type="password" id="password" name="password" placeholder="password">
                    <input type="password" id="confirmPassword" name="confirmPassword" placeholder="confirm password">
                    {{#if registrationErrorMessage}}
                    <div class="error-message">{{registrationErrorMessage}}</div>
                    {{/if}}
                    <button class="button size-4 flat black shadow" type="submit">create an account</button>
                </form>
                <div class="terms">By registering you agree to our <strong>Privacy Policy</strong> and <strong>Terms &
                        Conditions</strong>.</div>
            </div>

        </div>
        <div class="or">OR</div>
        <div class="sign-in">
            <div class="cta-title">Welcome back!</div>
            <div class="fields">
                <form action="/login" method="POST">
                    <input type="text" id="email" name="email" placeholder="email" required>
                    <input type="password" id="password" name="password" placeholder="password" required>
                    {{#if loginErrorMessage}}
                    <div class="error-message">{{loginErrorMessage}}</div>
                    {{/if}}
                    <a class="forgot-password" href="/account/password">forgot password?</a>
                    <button class="button size-4 flat black shadow" type="submit">sign in</button>
                </form>
                <div class="terms">By registering you agree to our <strong>Privacy Policy</strong> and <strong>Terms &
                        Conditions</strong>.</div>
            </div>
        </div>
    </div>
</div>