<div class="block-container">
    <div class="block">
        <div class="register">
            <div class="cta-title">Guest Checkout</div>
            <div class="small-text">No password needed. Create an account later</div>
            <div class="fields">
                <form action="/address" method="POST">
                    <input type="text" id="email" name="email" placeholder="email">
                    {{#if guestErrorMessage}}
                    <div class="error-message">{{guestErrorMessage}}</div>
                    {{/if}}
                    <button class="button size-4 flat black shadow" type="submit">check out as guest</button>

                    <a href="/checkout" class="link-button size-4 flat white shadow paypal">
                        <div>
                            <div class='text'>
                                checkout with
                            </div>
                            <div class="img">
                                <img src="paypal-addon1.png" alt="PayPal">
                            </div>
                        </div>
                    </a>
                </form>
                <div class="terms">By registering you agree to our <strong>Privacy Policy</strong> and <strong>Terms &
                        Conditions</strong>.</div>
            </div>

        </div>
        <div class="or">OR</div>
        <div class="sign-in">
            <div class="cta-title">Registered Customer</div>
            <div class="fields">
                <form action="/login-address" method="POST">
                    <input type="text" id="email" name="email" placeholder="email" required>
                    <input type="password" id="password" name="password" placeholder="password" required>
                    {{#if registeredErrorMessage}}
                    <div class="error-message">{{registeredErrorMessage}}</div>
                    {{/if}}
                    <a class="forgot-password" href="/account/password">forgot password?</a>
                    {{!-- <div class="checkbox">keep me signed in</div> --}}
                    <div class="check">
                        <input type="checkbox" id="check_sign_in" name="check_sign_in" value="true">
                        <label for="check_sign_in"> keep me signed in.</label>
                    </div>
                    <button class="button size-4 flat black shadow" type="submit">sign in & checkout</button>
                </form>
                <div class="terms">By signing in to your account you agree to our <strong>Privacy Policy</strong> and
                    <strong>Terms &
                        Conditions</strong>.
                </div>
            </div>
        </div>
    </div>
</div>